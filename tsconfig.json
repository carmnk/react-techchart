{
  "compilerOptions": {
    "target": "es5",
    "types": ["node", "jest"],
    "module": "esnext",
    "jsx": "react-jsx",
    "lib": ["es5", "es6", "ES2021", "ES2017", "ES2020", "esnext", "dom"],
    "rootDir": "src",
    "outDir": "./lib",
    "strict": true,
    "allowJs": true,
    "declaration": true,
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true
  },
  "include": ["src/**/*.ts"]
}
